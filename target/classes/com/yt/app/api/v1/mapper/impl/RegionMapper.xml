<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yt.app.api.v1.mapper.RegionMapper">
  <!-- 数据库列 -->
  <sql id="Base_Column_List">
     id,parent_id,region_path,region_grade,name,version
  </sql>
  <!-- 基础返回对象封装 -->
  <resultMap id="ResultMap" type="com.yt.app.api.v1.entity.Region">
         <id property="id" column="id" />
         <id property="parent_id" column="parent_id" />
         <id property="region_path" column="region_path" />
         <id property="region_grade" column="region_grade" />
         <id property="name" column="name" />
         <id property="version" column="version" />
  </resultMap>
  <!-- 默认新增 -->
  <insert id="post" parameterType="com.yt.app.api.v1.entity.Region">
  insert into region (id,parent_id,region_path,region_grade,name)
         values (#{id},#{parent_id},#{region_path},#{region_grade},#{name})
  </insert>
  <!-- 默认删除id对象 -->
 <delete id="delete" parameterType="java.lang.String">
     delete from region 
     where id = #{id}
 </delete>
  <!-- 默认更新id对象 -->
 <update id="put" parameterType="com.yt.app.api.v1.entity.Region">
    update region
         <set>
             <if test="parent_id != null">
                   parent_id = #{parent_id},
             </if>
             <if test="region_path != null">
                   region_path = #{region_path},
             </if>
             <if test="region_grade != null">
                   region_grade = #{region_grade},
             </if>
             <if test="name != null">
                   name = #{name},
             </if>
             <if test="version != null">
                   version = #{version}+1
             </if>
          </set>
     where id = #{id} and  version = #{version}
 </update>
  <!-- 默认获得id对象 -->
 <select id="get" parameterType="java.lang.String" resultMap="ResultMap">
     select
        <include refid="Base_Column_List" />
        from region 
        where id = #{id}
 </select>
  <!-- 默认获得id对象 -->
 <select id="getbyparentid" parameterType="java.lang.String" resultMap="ResultMap">
     select
        <include refid="Base_Column_List" />
        from region 
        where parent_id = #{id}
 </select>
   <!-- 默认获得region_grade对象 -->
 <select id="getregiongrade" parameterType="java.lang.String" resultMap="ResultMap">
     select
        <include refid="Base_Column_List" />
        from region 
        where region_grade = #{regiongrade}
 </select>
 
  <!--获得菜单权限对象 -->
  <select id="getlist" parameterType="map" resultMap="ResultMap">
  
  SELECT id, name, if(isnull(parent_id),-1,parent_id)  as pId from region t 
  
  </select>
  <!-- 默认集合 -->
 <select id="list" parameterType="java.util.HashMap" resultMap="ResultMap">
       select
        <include refid="Base_Column_List" />
        from region 
        <where>
        			1=1
             <if test="name != null and name != ''">
           		and name like "%"#{name}"%"
             </if>
             <if test="orderby != null and dir != null">
           		order by ${orderby} ${dir}
             </if>
             <if test="pageStart != null and pageEnd != null">
           		LIMIT #{pageStart},#{pageEnd}
             </if>
        </where>
 </select>
  <!-- 默认返回MAP集合 -->
 <select id="map" parameterType="java.util.HashMap" resultType="java.util.HashMap">
       select
        <include refid="Base_Column_List" />
        from region 
        <where>
        			1=1
             <if test="name != null and name != ''">
           		and name like "%"#{name}"%"
             </if>
             <if test="orderby != null and dir != null">
           		order by ${orderby} ${dir}
             </if>
             <if test="pageStart != null and pageEnd != null">
           		LIMIT #{pageStart},#{pageEnd}
             </if>
        </where>
 </select>
  <!-- 默认集合统计 -->
 <select id="countlist" parameterType="java.util.HashMap" resultType="int">
       select count(*) from region 
        <where>
        			1=1
             <if test="name != null and name != ''">
           		and name like "%"#{name}"%"
             </if>
        </where>
 </select>
  <!-- 默认返回MAP集合统计 -->
 <select id="countmap" parameterType="java.util.HashMap" resultType="int">
       select count(*) from region 
        <where>
        			1=1
             <if test="name != null and name != ''">
           		and name like "%"#{name}"%"
             </if>
        </where>
 </select>
  <!-- 默认获取Ids的对象 -->
 <select id="getByIds" parameterType="java.util.HashMap" resultMap="ResultMap">
       select
        <include refid="Base_Column_List" />
        from region 
        <where>
        1=1
             <if test="array != null and array != ''">
      		 	and id in
        			<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
           			#{item}
        			</foreach>
             </if>
        </where>
 </select>
  <!-- 默认获取Ids的对象 -->
 <select id="getlistAll" parameterType="java.util.HashMap" resultMap="ResultMap">
       select
        <include refid="Base_Column_List" />
        from region 
        <where>
        1=1
             <if test="array != null and array != ''">
      		 	and region_grade in
        			<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
           			#{item}
        			</foreach>
             </if>
        </where>
 </select>
  <!-- 默认获取parent_id的对象 -->
 <select id="getlistbyparentid" parameterType="java.util.HashMap" resultMap="ResultMap">
       select
        <include refid="Base_Column_List" />
        from region 
        <where>
        1=1
             <if test="array != null and array != ''">
      		 	and parent_id in
        			<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
           			#{item}
        			</foreach>
             </if>
        </where>
 </select>
</mapper>